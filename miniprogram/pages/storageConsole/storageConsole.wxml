<view class='page' >
  <view class="preview">
    <image class="img" src="{{imagePath}}" mode="aspectFit" style="height: 180px"/>
  </view>
  <block wx:if="{{nr == 1}}">
    <view class="container">  
      <view class="msgs" wx:for="{{msgs}}">{{msgs[index]}} </view>
      <view class="weui-article__p" class="iconMsg">{{iconMsg}}</view>
      </view>
  </block>
  <block wx:if="{{nr > 1}}"> 
    <view class="container">  
      <view class="msgs" wx:for="{{msgs}}">{{msgs[index]}} </view>
    </view>
    <view class="goto" >
      <block wx:if="{{categories['其他垃圾'] > 0}}">
        <button class="btn"  bindtap="gotoDry">其他垃圾</button>
      </block>
      <block wx:if="{{categories['厨余垃圾'] > 0}}">
        <button class="btn"  bindtap="gotoWet">厨余垃圾</button>
      </block>
      <block wx:if="{{categories['可回收物'] > 0}}">
        <button class="btn"  bindtap="gotoRec">可回收物</button>
      </block>
      <block wx:if="{{categories['有害垃圾'] > 0}}">
        <button class="btn"  bindtap="gotoHam">有害垃圾</button>
      </block>
    </view>
  </block>
   <block wx:if="{{nr == 0}}">
    <view class="container">  
        <view class="msgs" wx:for="{{msgs}}">{{msgs[index]}} </view>
        <view class="weui-article__p" class="iconMsg">{{iconMsg}}</view>
    </view>
    <view class="goto">  
        <button class="btn" bindtap="gotoBaike">查看百科</button>
        <button class="btn" bindtap="gotoIndex">返回首页</button>
     </view>
  </block>
</view>
