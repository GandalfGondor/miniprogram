<view class='page' >
  <view class="page__bd page__bd_spacing">
      <view class="container">  
        <image class="img" src="{{imagePath}}" mode="aspectFit" style="height: 180px"/>
        <view class="msgs" wx:for="{{msgs}}">{{msgs[index]}} </view>
      </view>

      <view class="container2">
        <block wx:if="{{nr == 1}}">
         <view class="weui-article__p" class="iconMsg">
                  {{iconMsg}} 
            </view>
        </block>
        <block wx:elif="{{nr > 1}}"> 
         <!--重定向到百科-->
          <view class="goto" >
            <block wx:if="{{categories['其他垃圾'] > 0}}">
              <button class="btn" type='primary' bindtap="gotoDry">其他垃圾</button>
            </block>
            <block wx:if="{{categories['厨余垃圾'] > 0}}">
              <button class="btn" type='primary' bindtap="gotoWet">厨余垃圾</button>
            </block>
            <block wx:if="{{categories['可回收垃'] > 0}}">
              <button class="btn" type='primary' bindtap="gotoRec">可回收垃</button>
            </block>
            <block wx:if="{{categories['有害垃圾'] > 0}}">
              <button class="btn" type='primary' bindtap="gotoHam">有害垃圾</button>
            </block>
          </view>
         <!--重定向到百科结束-->
        </block>
        <block wx:else></block>
      </view>
  </view>
</view>
